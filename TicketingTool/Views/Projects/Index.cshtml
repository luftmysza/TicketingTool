@model IEnumerable<TicketingTool.Models.Project>

<h2>Your Projects</h2>
<table>
    <thead>
        <tr>
            <th>Project Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.ProjectName</td>
                <td>
                    <a href="@Url.Action("Details", "Projects", new { id = project.ID })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
